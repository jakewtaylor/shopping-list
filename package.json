{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:prisma": "npx prisma generate",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev": "npm-run-all -p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "generate:css": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "start": "remix-serve build",
    "create-user": "ts-node scripts/createUser.ts",
    "seed": "ts-node scripts/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@prisma/client": "^4.4.0",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@remix-run/vercel": "^1.7.2",
    "@vercel/node": "^2.4.4",
    "bcrypt": "^5.1.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.0",
    "js-sha256": "^0.9.0",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.4.0",
    "pusher": "^5.1.1-beta",
    "pusher-js": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "use-long-press": "^2.0.2",
    "web-push": "^3.4.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@types/bcrypt": "^5.0.0",
    "@types/node-persist": "^3.1.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "eslint": "^8.23.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
